<Window x:Class="RealEstateApp.AddFeature"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateApp"
        mc:Ignorable="d"
        Title="Add Feature" Height="350" Width="300" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel
            MinWidth="150"
            Grid.Row="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Label Content="Header" FontWeight="Bold"/>
            <TextBox Width="250"/>
        </StackPanel>

        <StackPanel
            MinWidth="150"
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Label Content="Content" FontWeight="Bold"/>
            <TextBox Width="250" Height="150"/>
        </StackPanel>

        <Button
            Content="Submit"
            Grid.Row="3"
            HorizontalAlignment="Center"
            Margin="10"
            MinWidth="100" Click="SubmitFeature">
        </Button>
    </Grid>
</Window>
